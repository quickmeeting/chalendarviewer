<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent" 
	android:layout_width="fill_parent"
	android:orientation="vertical">
	<LinearLayout
	    android:layout_width="fill_parent"
		android:layout_height="0dip" 
		android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">
		 <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/welcome"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="@string/welcomeHelp"
                android:textAppearance="?android:attr/textAppearanceMedium" android:gravity="center_vertical|center"/>
        </LinearLayout>

	<LinearLayout 
		android:layout_height="wrap_content" 
		android:layout_width="fill_parent"
		>
             <Button
                android:layout_weight="1"
                android:id="@+id/welcomeCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/maybeLater" />

            <Button
                android:layout_weight="1"
                android:id="@+id/welcomeOk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ok" />
	</LinearLayout>
</LinearLayout>
